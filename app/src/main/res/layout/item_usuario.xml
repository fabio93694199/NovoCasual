<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:paddingLeft="16dp">

    <ImageView
        android:layout_alignParentLeft="true"
        android:layout_height="50dp"
        android:layout_width="50dp"
        android:id="@+id/ID_foto"
        android:layout_marginRight="6dp"
        android:src="@android:drawable/sym_def_app_icon"/>

    <TextView
        android:textColor="@color/colorPrimarytext"
        android:layout_toRightOf="@+id/ID_foto"
        android:id="@+id/ID_pessoa_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingRight="16dp"
        android:textSize="16sp"/>

    <View
        android:id="@+id/vw_divider"
        android:layout_marginTop="20dp"
        android:layout_alignLeft="@+id/ID_pessoa"
        android:layout_below="@+id/ID_pessoa_email"
        android:background="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"/>

    <TextView
        android:textColor="@color/colorPrimarytext"
        android:id="@+id/ID_pessoa_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textSize="12sp"
        android:layout_below="@+id/ID_pessoa_nome"
        android:layout_toEndOf="@+id/ID_foto" />

</RelativeLayout>